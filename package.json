{
  "name": "capnweb-auto-reconnect",
  "version": "0.0.4",
  "description": "Reconnecting WebSocket RPC session support for capnweb.",
  "scripts": {
    "build": "tsdown",
    "check:types": "tsgo --noEmit",
    "lint": "oxlint --type-aware",
    "check": "npm run lint && npm run check:types && npm run test:types",
    "test": "vitest run tests/tests",
    "test:types": "tsgo --noEmit -p tsconfig.type-tests.json",
    "prepublishOnly": "npm run check && npm run test && npm run build"
  },
  "keywords": [
    "capnweb",
    "rpc",
    "websocket",
    "reconnect"
  ],
  "author": "VastBlast",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "devDependencies": {
    "@types/ws": "^8.18.1",
    "@typescript/native-preview": "^7.0.0-dev.20260216.1",
    "capnweb": "^0.5.0",
    "oxlint": "^1.48.0",
    "oxlint-tsgolint": "^0.14.0",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "ws": "^8.19.0"
  },
  "peerDependencies": {
    "capnweb": "^0.5.0"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  }
}
